#include<iostream>
using namespace std;
class Rectangle{
	private:
		int length;
		int breadth;
	public:
		void setLength(int l){
			length=l;
		}
		void setBreadth(int b){
			breadth=b;
		}
		int getLength(){
			return length;
		}
		int getBreadth(){
			return breadth;
		}
		
		int area(){
			return length*breadth;
		}
		int perimeter(){
			return 2*(length+breadth);
		}
};
int main(){
	Rectangle r;
	Rectangle *p;
	p=&r;
	r.setBreadth(10);
	r.setLength(10);
	cout<<"Perimeter: "<<r.perimeter()<<endl;
	cout<<"Area: "<<r.area()<<endl<<endl;
	
	cout<<"Perimeter: "<<p->perimeter()<<endl;
	cout<<"Area: "<<p->area()<<endl;
	
	return 0;
}  
